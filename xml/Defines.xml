<?xml version="1.0" encoding="UTF-8"?>
<!--
  This file is used to declare the location of files containing "definitions"
  used in-game
  All files are enclosed in the <defines></defines> tag
  Each entry must have the following attributes :
    -> id - this is the reference of the define.
    -> path - location in file-system 
    -> definition - name of the strucutral xml file
-->

<document>
  <defines>
    <define id="tradegood" path="MOD/common/tradegoods" definition="tradegoods.xml"/>
    <define id="building" path="MOD/common/buildings" definition="buildings.xml"/>
  </defines>
</document>

